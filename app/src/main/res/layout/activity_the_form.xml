        android:hint="رقم هاتف حاجز غرف الطواري"

        android:inputType="textPersonName"
        android:paddingRight="10dp"
        android:textSize="20dp" />




    <TextView
        android:id="@+id/txt05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
