<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:paddingLeft="15dp"
    android:paddingRight="36dp"
     tools:context=".Hospital01Activity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="مستشفى الشرطة"
        android:id="@+id/textView3"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
           />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="شارع بري المعرض"
        android:id="@+id/textView4"
        android:textColor="#000000"

        android:layout_marginTop="240dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/hospital01"
        android:layout_marginTop="40dp"

        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="إتصل على رقم 0914819837"
        android:id="@+id/btn_phone_number"
        android:onClick="btn_phone_number"
        android:layout_below="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="خريطة قوقل للموقع"
        android:id="@+id/btn_google_map"
        android:onClick="btn_google_map"
        android:layout_below="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />


    <Button
        android:id="@+id/btn_BookRoom"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"

        android:layout_alignRight="@+id/textView4"
        android:layout_centerInParent="true"
        android:layout_marginTop="150dp"
        android:background="@android:color/holo_orange_light"
        android:onClick="btn_google_map"
        android:text="إحجز غرفة طواري" />






</RelativeLayout>