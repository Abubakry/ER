<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingFormActivity"
    android:orientation="vertical">


    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:text="@string/pation_info"
                    android:textColor="@color/colorPrimary"
                    android:textSize="22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/patientName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="إسم المريض"
                    android:inputType="textPersonName"
                    android:textSize="20sp" />




                <EditText android:textAlignment="viewStart"
                    android:hint="العمر"
                    android:id="@+id/patientAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="20sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:text="@string/patient_assistant"
                    android:textColor="@color/colorPrimary"
                    android:textSize="22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/assistantName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="إسم حاجز غرف الطواري"
                    android:inputType="textPersonName"
                    android:textSize="20sp" />


                <EditText android:textAlignment="viewStart"
                    android:id="@+id/assistantPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="رقم هاتف حاجز غرف الطواري"
                    android:inputType="phone"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/assistantRelation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="صلة القرابة بالمريض"
                    android:inputType="textPersonName"
                    android:textSize="20sp" />


                <Spinner
                    android:id="@+id/Spinner1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="الأخصائي"
                    android:inputType="textPersonName"
                    android:textSize="20sp"
                    android:entries="@array/spinerText"


                    />




            </LinearLayout>
        </androidx.cardview.widget.CardView>









        <Button android:layout_margin="10dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/positive_btn_bg"
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="حجز غرفة"
        />


    </LinearLayout>


</LinearLayout>
